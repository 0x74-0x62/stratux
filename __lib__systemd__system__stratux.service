[Unit]
Description=Stratux
After=network.target

[Service]
ExecStartPre=/root/stratux-pre-start.sh
ExecStart=/usr/bin/gen_gdl90
ExecStop=/usr/bin/killall dump1090 flarm_decode nrf905_demod rtl_sdr
KillMode=process
Restart=always
RestartSec=5
LimitCORE=1073741824

[Install]
WantedBy=multi-user.target

